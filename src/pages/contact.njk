<section id="contact">
  <div class="contact container">
    <h2 class="section__title">Contact Us</h2>
    <p class="section__subtitle">We can't solve your problem unless you tell us</p>
    <form action="https://formsubmit.co/dostonnabotov@gmail.com" method="POST">
      <input
        type="hidden"
        name="_autoresponse"
        value="Thank you for contacting us! We will get in touch with you as soon as possible">
      <label for="name">Name:
        <span class="mandatory">*</span>
      </label>
      <input type="text" id="name" name="name" placeholder="Your name.." required>
      <label for="email">Email:
        <span class="mandatory">*</span>
      </label>
      <input type="email" id="email" name="email" placeholder="Your last name.." required>
      <label for="topic">Topic:
        <span class="mandatory">*</span>
      </label>
      <select id="topic" name="topic" required>
        <option value="select"></option>
        <option value="feedback">Feedback</option>
        <option value="problem">Problem</option>
        <option value="donation">Donation</option>
        <option value="other">Other</option>
      </select>
      <label for="subject">Subject:
        <span class="mandatory">*</span>
      </label>
      <textarea id="subject" name="subject" placeholder="Write something.." style="height:170px" required></textarea>
      <button class="btn btn-primary">Submit</button>
    </form>
